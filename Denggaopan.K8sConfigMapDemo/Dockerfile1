#See https://aka.ms/containerfastmode to understand how Visual Studio uses this Dockerfile to build your images for faster debugging.

FROM mcr.microsoft.com/dotnet/core/aspnet:3.1-buster-slim AS base
WORKDIR /app
EXPOSE 80

FROM mcr.microsoft.com/dotnet/core/sdk:3.1-buster AS build
WORKDIR /src
COPY ["Denggaopan.K8sConfigMapDemo/Denggaopan.K8sConfigMapDemo.csproj", "Denggaopan.K8sConfigMapDemo/"]
RUN dotnet restore "Denggaopan.K8sConfigMapDemo/Denggaopan.K8sConfigMapDemo.csproj"
COPY . .
WORKDIR "/src/Denggaopan.K8sConfigMapDemo"
RUN dotnet build "Denggaopan.K8sConfigMapDemo.csproj" -c Release -o /app/build

FROM build AS publish
RUN dotnet publish "Denggaopan.K8sConfigMapDemo.csproj" -c Release -o /app/publish

FROM base AS final
WORKDIR /app
COPY --from=publish /app/publish .
ENTRYPOINT ["dotnet", "Denggaopan.K8sConfigMapDemo.dll"]